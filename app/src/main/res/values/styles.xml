<resources>

    <!-- Base application theme. -->
    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <!--<item name="colorPrimary">#3F51B5</item>-->
        <item name="colorPrimary">#383838</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <!--<item name="colorPrimaryDark">#303F9F</item>-->
        <item name="colorPrimaryDark">#2B2B2B</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <!--<item name="colorAccent">#FF4081</item>-->
        <item name="colorAccent">#1271DE</item>

    </style>

    <style name="Switch_Light_Slider" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#1271DE</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#f1f1f1</item>
    </style>

</resources>
